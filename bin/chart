#!/usr/bin/zsh

pairs=('xmreur' 'btceur' 'etheur')
duration='15m'

# Mark terminal for later use and make sure it's seperate container
i3-msg 'split h; mark terminal' > /dev/null

for pair in $pairs
do
  chromium --app="https://trade.kraken.com/kraken/$pair/$duration" > /dev/null 2>&1 &
  sleep 0.05
done

sleep 0.6

# Create bottom row
i3-msg '[instance=_etheur_] focus; move down; split h; [instance=_btceur_] focus; move down' > /dev/null

# Resize
i3-msg '[con_mark=terminal] resize shrink right 70' > /dev/null
i3-msg '[instance=_etheur_] resize shrink right 70' > /dev/null

# Return focus to the terminal after creating windows
i3-msg '[con_mark=terminal] focus; unmark terminal' > /dev/null

cat
