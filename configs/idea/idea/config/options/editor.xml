<application>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="MAIN_EDITOR" />
    <option name="IS_ENSURE_NEWLINE_AT_EOF" value="true" />
    <option name="IS_WHITESPACES_SHOWN" value="true" />
    <option name="IS_WHEEL_FONTCHANGE_ENABLED" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern icon="default" useCustomColors="false" case-sensitive="false" pattern="\btodo\b.*">
      <option name="FOREGROUND" value="ffffff" />
      <option name="FONT_TYPE" value="3" />
    </pattern>
    <pattern icon="default" useCustomColors="false" case-sensitive="false" pattern="\bfixme\b.*">
      <option name="FOREGROUND" value="ffffff" />
      <option name="FONT_TYPE" value="3" />
    </pattern>
    <pattern icon="default" useCustomColors="false" case-sensitive="false" pattern="\bhack\b.*">
      <option name="FOREGROUND" value="ffffff" />
      <option name="FONT_TYPE" value="3" />
    </pattern>
    <pattern icon="default" useCustomColors="false" case-sensitive="false" pattern="\bxxx\b.*">
      <option name="FOREGROUND" value="ffffff" />
      <option name="FONT_TYPE" value="3" />
    </pattern>
    <pattern icon="default" useCustomColors="false" case-sensitive="false" pattern="\bnote\b.*">
      <option name="FOREGROUND" value="ffffff" />
      <option name="FONT_TYPE" value="3" />
    </pattern>
    <filter name="Verberg NOTEs">
      <pattern index="1" />
      <pattern index="3" />
      <pattern index="0" />
      <pattern index="2" />
    </filter>
    <filter name="Aleen TODOs">
      <pattern index="0" />
    </filter>
  </component>
  <component name="XmlEditorOptions">
    <option name="showCssInlineColorPreview" value="true" />
  </component>
</application>