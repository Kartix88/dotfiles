#!/usr/bin/env bash
#
# The session doesn't get listed if we simply symlink it, so we'll have to make
# an actual copy (a hardlink would probably work as well).

cd "$(dirname "$0")"

session_location=/usr/share/xsessions/i3-kde.desktop

[[ -f $session_location ]] || echo 'Installing KDE/i3 session'
cp ./i3-kde.desktop $session_location
