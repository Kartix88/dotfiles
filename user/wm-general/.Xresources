! Base16 Tomorrow Night
! Scheme: Chris Kempson (http://chriskempson.com)

#define base00 #1d1f21
#define base01 #282a2e
#define base02 #373b41
#define base03 #969896
#define base04 #b4b7b4
#define base05 #c5c8c6
#define base06 #e0e0e0
#define base07 #ffffff
#define base08 #cc6666
#define base09 #de935f
#define base0A #f0c674
#define base0B #b5bd68
#define base0C #8abeb7
#define base0D #81a2be
#define base0E #b294bb
#define base0F #a3685a

*.foreground:   base05
*.background:   base00
*.cursorColor:  base05

*.color0:       base00
*.color1:       base08
*.color2:       base0B
*.color3:       base0A
*.color4:       base0D
*.color5:       base0E
*.color6:       base0C
*.color7:       base05

*.color8:       base03
*.color9:       base08
*.color10:      base0B
*.color11:      base0A
*.color12:      base0D
*.color13:      base0E
*.color14:      base0C
*.color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
! use 'shell' template to set these if necessary
*.color16:      base09
*.color17:      base0F
*.color18:      base01
*.color19:      base02
*.color20:      base04
*.color21:      base06

! FontConfig
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! urxvt
URxvt.font: xft:Input Mono Narrow:size=11:style=medium, xft:Noto Emoji:size=11:antialias=true
URxvt.boldFont: xft:Input Mono Narrow:size=11:style=bold
URxvt.matcher.button: 1
URxvt.perl-ext-common: default,matcher
URxvt.scrollBar: false
URxvt.url-launcher: /usr/bin/xdg-open

! Rofi
rofi.bw: 0
rofi.color-enabled: true
rofi.color-normal: argb:00ffffff,#969fb6,argb:00ffffff,argb:00ffffff,#ffffff
rofi.color-urgent: argb:00ffffff,#f2b6b5,argb:00ffffff,argb:00ffffff,#fdf2f2
rofi.color-active: argb:00ffffff,#c2cad0,argb:00ffffff,argb:00ffffff,#dfe3e7
rofi.color-window: argb:ee2f343f,#f5f5f5
rofi.font: Open Sans 15
rofi.fullscreen: true
rofi.hide-scrollbar: true
rofi.line-margin: 15
rofi.padding: 300
rofi.separator-style: none
