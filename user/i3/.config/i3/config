# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# super
set $mod Mod4
set $alt Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# Window titles use a smaller font size to create padding
font pango:Roboto 13

# Enable window gaps
gaps inner 15
gaps outer 5

# Focussing windows should require an actual click
focus_follows_mouse no

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Customize colors
set $color-bg         #e7e8eb
set $color-border     #dbdbdf
set $color-border-mix #dbdbdf
set $color-border-alt #8f929a
set $color-text       #2f343f
set $color-alert      #bd2c40

# class                 border            backgr.           text        indicator child_border
client.focused          $color-border     $color-bg         $color-text #2e9ef4   $color-border
client.focused_inactive $color-border-mix $color-border-mix $color-text #484e50   $color-border-alt
client.unfocused        $color-border-alt $color-border-alt $color-text #292d2e   $color-border-alt
client.urgent           $color-alert      $color-bg         $color-text #900000   $color-bg
client.placeholder      #000000           $color-bg         $color-text #000000   $color-bg
client.background       $color-text

# Start a terminal
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec konsole

# Kill focused window
bindsym $mod+Shift+q kill
bindsym $alt+F4 kill

# This shortcut gets handled by Albert
# # Start rofi (a program launcher)
# bindsym $mod+space exec "rofi -modi drun,run -show drun"

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Change focus (these are changed to mimmick VIM)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Move entire workspace
bindsym Ctrl+$alt+Shift+h move workspace to output left
bindsym Ctrl+$alt+Shift+j move workspace to output down
bindsym Ctrl+$alt+Shift+k move workspace to output up
bindsym Ctrl+$alt+Shift+l move workspace to output right

# Alternatively, you can use the cursor keys:
bindsym Ctrl+$alt+Shift+Left move workspace to output left
bindsym Ctrl+$alt+Shift+Down move workspace to output down
bindsym Ctrl+$alt+Shift+Up move workspace to output up
bindsym Ctrl+$alt+Shift+Right move workspace to output right

# Split in vertical orientation
bindsym $mod+v split v

# Split in horizontal orientation (this is mapped to $mod+h by default)
bindsym $mod+c split h

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle sticky status on a floating window
bindsym $mod+y sticky toggle

# Toggle tiling / floating
bindsym $mod+Control+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Focus the child container
bindsym $mod+d focus child

# Focus a window marked as urgent (e.g. a popup on a different workspace)
bindsym $mod+u [urgent=latest] focus

# Switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+minus scratchpad show

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+minus move scratchpad

# Reload the configuration file
bindsym $mod+Shift+c reload
# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec " \
   zenity --question --default-cancel --width=50 --text='Really quit i3?' \
   && i3-msg exit"

# Lock the screen
bindsym $mod+Control+l exec --no-startup-id light-locker-command -l

# Resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # These bindings mimmick bspwm's defaults somewhat
  bindsym $mod+h resize grow left 10 px or 5 ppt
  bindsym $mod+j resize grow down 10 px or 5 ppt
  bindsym $mod+k resize grow up 10 px or 5 ppt
  bindsym $mod+l resize grow right 10 px or 5 ppt
  bindsym $mod+Shift+h resize shrink right 10 px or 5 ppt
  bindsym $mod+Shift+j resize shrink up 10 px or 5 ppt
  bindsym $mod+Shift+k resize shrink down 10 px or 5 ppt
  bindsym $mod+Shift+l resize shrink left 10 px or 5 ppt
  bindsym h resize grow left 10 px or 5 ppt
  bindsym j resize grow down 10 px or 5 ppt
  bindsym k resize grow up 10 px or 5 ppt
  bindsym l resize grow right 10 px or 5 ppt
  bindsym Shift+h resize shrink right 10 px or 5 ppt
  bindsym Shift+j resize shrink up 10 px or 5 ppt
  bindsym Shift+k resize shrink down 10 px or 5 ppt
  bindsym Shift+l resize shrink left 10 px or 5 ppt

  # Same bindings, but for the arrow keys
  bindsym $mod+Left resize grow left 10 px or 5 ppt
  bindsym $mod+Down resize grow down 10 px or 5 ppt
  bindsym $mod+Up resize grow up 10 px or 5 ppt
  bindsym $mod+Right resize grow right 10 px or 5 ppt
  bindsym $mod+Shift+Left resize shrink right 10 px or 5 ppt
  bindsym $mod+Shift+Down resize shrink up 10 px or 5 ppt
  bindsym $mod+Shift+Up resize shrink down 10 px or 5 ppt
  bindsym $mod+Shift+Right resize shrink left 10 px or 5 ppt
  bindsym Left resize grow left 10 px or 5 ppt
  bindsym Down resize grow down 10 px or 5 ppt
  bindsym Up resize grow up 10 px or 5 ppt
  bindsym Right resize grow right 10 px or 5 ppt
  bindsym Shift+Left resize shrink right 10 px or 5 ppt
  bindsym Shift+Down resize shrink up 10 px or 5 ppt
  bindsym Shift+Up resize shrink down 10 px or 5 ppt
  bindsym Shift+Right resize shrink left 10 px or 5 ppt

  # Back to normal: Enter or Escape
  bindsym $mod+Return mode "default"
  bindsym $mod+Escape mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#
# Window rules
#

# Hide borders around the windows and hack some padding into the title bars
new_window none
new_float none
for_window [class=".*"] title_format " <span size='small'> %title</span>"

# Some dialogs should be floating by default
for_window [class="Firefox" window_role="page-info"] floating enable
for_window [class="Emacs" instance="^Atomic_Chrome"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Steam" title="Friends"] floating enable
for_window [class="Steam" title="Steam Guard - Computer Authorization Required"] floating enable
for_window [class="systemsettings"] floating enable
for_window [class="vokoscreen"] floating enable

# Keep KeePass out of sight, but show confirmation popups
for_window [class="keepassxc"] move workspace number 10
for_window [class="keepassxc" window_type="dialog"] move workspace current

# Thudnderbird likes to spawn another window when replying to messages
for_window [class="Thunderbird" instance="Mail"] split horizontal, layout tabbed

# I also prefer new browser windows (and mpv) to open in tabs
for_window [class="Firefox"] layout tabbed

#
# Applications
#

# There's a small delay on these commands so focus can be returned to the
# application before taking the screenshot

# Screenshot and copy image to clipboard
bindsym Print exec --no-startup-id " \
  FILE_NAME=~/Afbeeldingen/$(date +%F-%T).png; \
  maim -d 0.1 -u $FILE_NAME && xclip -sel clip -t image/png -i $FILE_NAME \
    && notify-send \\"Screenshot opgeslagen\n$FILE_NAME\\""

# Screenshot region and copy image to clipboard
bindsym Shift+Print exec --no-startup-id " \
  FILE_NAME=~/Afbeeldingen/$(date +%F-%T).png; \
  maim -d 0.1 -su $FILE_NAME && xclip -sel clip -t image/png -i $FILE_NAME \
    && notify-send \\"Screenshot opgeslagen\n$FILE_NAME\\""

# Screenshot, upload to imgur and copy link to clipboard
bindsym Control+Print exec --no-startup-id " \
  FILE_NAME=/tmp/screenshot.png; \
  maim -d 0.1 -u $FILE_NAME && imgurbash2 $FILE_NAME \
    && notify-send \\"Screenshot geüpload naar\n$(xclip -o -sel clip)\\""

# Screenshot region, upload to imgur and copy link to clipboard
bindsym Control+Shift+Print exec --no-startup-id " \
  FILE_NAME=/tmp/screenshot.png; \
  maim -d 0.1 -su $FILE_NAME && imgurbash2 $FILE_NAME \
    && notify-send \\"Screenshot geüpload naar\n$(xclip -o -sel clip)\\""

# Restart XFCE's panel
bindsym $mod+F11 exec --no-startup-id "pkill polybar; polybar main"
# Toggle the compositor
bindsym $mod+F12 exec --no-startup-id pkill compton || compton --respect-prop-shadow

# Banter
bindsym $mod+F1 exec --no-startup-id ssh -p 13337 candy@robbertvanderhelm.nl mpv --no-vid /home/candy/Music/mlg-airhorn.mp3
bindsym $mod+F2 exec --no-startup-id ssh -p 13337 candy@robbertvanderhelm.nl mpv --no-vid /home/candy/Music/and-his-name-is-john-cena-1.mp3
bindsym $mod+F5 exec --no-startup-id ssh -p 13337 candy@robbertvanderhelm.nl pactl set-sink-volume 0 -3%
bindsym $mod+F6 exec --no-startup-id ssh -p 13337 candy@robbertvanderhelm.nl pactl set-sink-volume 0 +3%

# Spotify doesn't bind its own media keys
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next

# Brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 5
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 5

#
# Startup applications
#

# Transparency and eye candy
exec --no-startup-id compton --respect-prop-shadow
# Notifications daemon (it tends to crash, so we'll run it as a systemd unit)
exec --no-startup-id systemctl --user start xfce4-notifyd
# Screen locking
exec --no-startup-id light-locker --lock-on-suspend
# Polkit
exec --no-startup-id /usr/lib/mate-polkit/polkit-mate-authentication-agent-1
# Start polybar
exec --no-startup-id polybar main
# Set a wallpaper
exec_always --no-startup-id feh --bg-fill ~/.dotfiles/user/wallpapers/Afbeeldingen/wallpapers/arc.png
# Speed up keyboard repeating
exec_always --no-startup-id xset r rate 250 15

# Battery status
exec --no-startup-id cbatticon
# Network Manager
exec --no-startup-id nm-applet
# Redshift
exec --no-startup-id redshift-gtk
# Volume control
exec --no-startup-id volumeicon

# KDE-connect's daemon (the indicator is separate, but I never use that anyway)
exec --no-startup-id /usr/lib/kdeconnectd
# Start KeePassXC on the last workspace
exec --no-startup-id keepassxc
# Applicatoin launcher and the rest of the kitchen sink
exec --no-startup-id albert

# vim:filetype=i3
